<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="noindex">

    <title>{{ project_name }} - Cambiar contraseña</title>

    <!-- Vendor css -->
    <link href="../lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="../lib/Ionicons/css/ionicons.css" rel="stylesheet">

    <!-- Shamcey CSS -->
    <link rel="stylesheet" href="../css/shamcey.css">
</head>

<body class="bg-gray-900">

<div class="signpanel-wrapper">
    <div class="signbox">
        <div class="signbox-header">
            <h2>{{ project_name }}</h2>
            <p class="mg-b-0">Cambiar contraseña</p>
        </div><!-- signbox-header -->
        <div class="signbox-body">

            {{ form_start(form) }}

            <div class="form-group">
                <label class="form-control-label" for="username">Nueva contraseña:</label>
                <input type="password" id="user_change_password_plainPassword_first" name="user_change_password[plainPassword][first]" placeholder="Tu nueva contraseña" required="required" class="form-control" />
            </div><!-- form-group -->

            <div class="form-group">
                <label class="form-control-label" for="username">Repetir nueva contraseña:</label>
                <input type="password" id="user_change_password_plainPassword_second" name="user_change_password[plainPassword][second]" placeholder="Repite tu nueva contraseña" required="required" class="form-control" />
            </div><!-- form-group -->

            <button class="btn btn-success btn-block" type="submit">Recordar contraseña</button>

            <div class="tx-center bg-white bd pd-10 mg-t-40"><a href="{{ path('login') }}">Iniciar sesión</a></div>

            {{ form_widget(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}


        </div><!-- signbox-body -->
    </div><!-- signbox -->
</div><!-- signpanel-wrapper -->

<script src="../lib/jquery/jquery.js"></script>
<script src="../lib/popper.js/popper.js"></script>
<script src="../lib/bootstrap/bootstrap.js"></script>

<script src="../js/shamcey.js"></script>
</body>
</html>