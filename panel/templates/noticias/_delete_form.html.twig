<form style="margin-top: 25px;" method="post" action="{{ path('noticias_delete', {'id': noticia.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ noticia.id) }}">
    <button class="btn btn-danger btn-block">Eliminar noticia</button>
</form>
