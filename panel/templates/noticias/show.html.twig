{% extends 'base.html.twig' %}

{% block title %}Noticias{% endblock %}

{% block body %}
    <h1>Noticias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ noticia.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ noticia.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ noticia.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ noticia.fecha ? noticia.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ noticia.estado }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('noticias_index') }}">back to list</a>

    <a href="{{ path('noticias_edit', {'id': noticia.id}) }}">edit</a>

    {{ include('noticias/_delete_form.html.twig') }}
{% endblock %}
