                        <td class="text-center">
                            <strong>{{ partido.goles_local }} - {{ partido.goles_visitante }}</strong>
                        </td>
                        <td>
                            <a href="{{ partido.pgEnlace2 }}" style="{{ partido.Fvisitante }}">{{ partido.visitanteCorto }}</a>
                        </td>
